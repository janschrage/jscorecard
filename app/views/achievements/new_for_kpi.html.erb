<h1>New achievement</h1>

<% form_for(@achievement) do |f| %>
  <%= f.error_messages %>

  <p><% @kpis=Kpi.find(:all) %>
    KPI: <%= f.collection_select :kpi_id, @kpis, :id, :name %>
  </p>  <p>
    Report date: <%= f.date_select :report_date %>
  </p>
  <p>
    <%= f.label :kpivalue %><br />
    <%= f.text_field :kpivalue %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', achievements_path %>
