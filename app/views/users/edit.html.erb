<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "Password" %><br />
  	<%= f.password_field :password, :size => 40 %>
 </p>
 <p>
  <label for="user_password_confirmation">Confirm:</label>
  <%= f.password_field :password_confirmation, :size => 40 %>
</p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
