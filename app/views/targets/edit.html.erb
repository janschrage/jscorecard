<h1>Editing target</h1>

<% form_for(@target) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    Belongs to perspective:<br />
    <% @perspectives=Perspective.find(:all,:sort => :name) %>
    <%= f.collection_select :perspective_id, @perspectives, :id, :name %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @target %> |
<%= link_to 'Back', targets_path %>
